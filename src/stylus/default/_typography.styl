h1, h2, h3, h4
    font-family: fnt(header)
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;

h1
    font-size: 2.5em
    background: linear-gradient(45deg, clr(prim), clr(second_3));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;

h2
    font-size: 2.2em
    margin-bottom: 1em
    color: clr(prim);
    line-height: 1.3

h3
    font-size: 1.8em
    color: clr(prim);
    margin-bottom: 0.8em

h4
    font-size: 1.3em
    color: clr(second_3);
    margin-bottom: 0.5em

p 
    font-family: fnt(prim)
    font-size: 1em
    text-align: left

a
    font-size: 1em

i
    

+below(desktop)
    h2 
        font-size: 2em
    
    h3 
        font-size: 1.5em;

    p 
        font-size: .9em
    
    a
        font-size: .9em 

    
+below(smallMobile)
    h2 
        font-size: 1.5em
    
    