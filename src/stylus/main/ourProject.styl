.project-showcase 
    position: relative;

.project-header 
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;

.animated-logo 
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    animation: pulse 2s infinite ease-in-out;
    width: 180px;

.animated-logo i 
    font-size: 1.5rem;
    color clr(blck)

.animated-logo span 
    font-family: 'Oswald', sans-serif;
    font-weight: 600;
    font-size: 1.2rem;
    color clr(blck)
    text-transform: uppercase;
    letter-spacing: 1px;

.project-content 
    display: grid;
    grid-template-columns: 1fr
    gap: 3rem;
    align-items: start;

/* Left Controls */
.project-controls 
    display: flex;
    flex-direction: column;

.floor-buttons 
    display: flex
    gap: 12px;
    flex-wrap: wrap;


.floor-btn 
    background: clrgb(blck, 0.7);
    color clr(prim)
    border: 2px solid clr(prim)
    border-radius: 5px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 15px;
    z-index: 1;
    font-size: .8em;
    padding: 12px 11px;
    width: max-content

.floor-btn::before 
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, clrgb(prim, 0.2), transparent);
    transition: left 0.5s;
    z-index: -1;

.floor-btn:hover::before 
    left: 100%;

.floor-btn.active 
    background: clr(prim)
    color clr(blck)
    transform: scale(1.05);
    box-shadow: 0 5px 15px clrgb(prim, 0.4);

.floor-btn:hover:not(.active) 
    background: clrgb(prim, 0.1);
    transform: translateX(5px);


.project__top
    display: grid
    grid-template-columns: 67% auto;
    gap: 32px;

/* Center Content */
.project-center 
    display: flex;
    flex-direction: column;
    gap: 2rem;

.house-main-image 
    display: flex
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 40px clrgb(blck, 0.5);
    width: 100%;
    height: 500px;
    background: white

.house-main-image img 
    min-width: 778px;
    max-width: 100%;
    min-height: 500px;
    max-height: 500px;
    height: auto
    object-fit: cover;
    transition: transform 0.3s ease;


.house-main-image:hover img 
    transform: scale(1.05);

.house-plan 
    background: clrgb(second, 0.95);
    // border-radius: 15px;
    padding: 1rem;
    box-shadow: 0 10px 30px clrgb(blck, 0.3);
    height: 387px;

.house-plan img 
    width: 100%;
    height: 100%
    // height: 250px;
    object-fit: contain
    // border-radius: 10px;

/* Right Content */
.project-right 
    display: flex;
    flex-direction: column;
    gap: 1.5em;
    align-items: center


.house-variants 
    display: flex;
    flex-direction: column;
    gap: 1rem;

.variant-image 
    overflow: hidden;
    box-shadow: 0 5px 15px clrgb(blck, 0.3);
    transition: transform 0.3s ease;
    cursor: pointer;
    height: 155px
    min-width 268px
    max-width 270px
    min-height: 148px

.variant-image img 
    width: 100%;
    height: 100%;
    object-fit: fill
    object-position: center

.variant-image:hover 
    transform: scale(1.05);

.house-info 
    background: transparent;
    padding: 2rem 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem 1.2rem 1.5rem;
    color: clr(second)

.house-info h3 
    color clr(prim)
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;

.project-description 
    color: clr(second_2)
    margin-bottom: 2rem;
    line-height: 1.6;
    text-align: justify;
    font-size: 0.95rem;

/* Specs box styled like in the image */
.specs-box 
    background-color: clr(blck);
    border: 1px solid clr(prim)
    border-radius: 15px;
    padding: .8rem;
    position: relative;
    overflow: hidden;
    height: 381px

.specs-box::before 
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 15px;
    border: 1px solid clr(prim)
    box-shadow: 0 0 15px clrgb(prim, 0.3);
    pointer-events: none;

.specs-box h4 
    color clr(prim)
    text-align: center;
    margin-bottom: 1.5rem;
    font-weight: 600;

.specs-list 
    list-style: none;
    padding: 0;
    margin: 0;

.specs-list li 
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.8rem;
    color clr(prim)


.specs-list li i 
    font-size: 1.2rem;
    width: 25px;
    height: 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    color clr(prim)


.specs-list li span 
    font-size: 1rem;
    color clr(prim)
    font-weight: 500;

+below(t)
    .project__top
        grid-template-columns: 1fr
        gap: 4px;

    .house-variants
        flex-direction: row

    .variant-image 
        align-content: flex-start;
        height: 81px;
        min-width: 268px;
        max-width: auto;
        min-height: auto; 
        
    .variant-image img 
        height: 100%;

    .project-content 
        grid-template-columns: 1fr;
        gap: 2rem;

    .house-main-image
        min-width: auto
        min-height: auto

    .house-main-image img
        height: 192px        
        min-width: unset;
        min-height: unset 

    
    .project-title 
        font-size: 2.5rem;
    
    .house-plan img 
        height: 143px;
        object-fit: cover;
    
    .floor-buttons 
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0.5rem;
    
    
+below(sm)
    .animated-logo
        width 125px
    
    .project-title 
        font-size: 1.8rem;
    
    .specs-box h4
        font-size: 1em

    .floor-buttons
        flex-direction: row
        justify-content: center;

    .floor-btn
        font-size: .6em