.discount-text 
    font-size: 1.2rem;
    color: #ff6b35;
    font-weight: 600;
    margin-top: 0.5rem;
    
.floor-options 
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;

.option-card 
    position: relative;
    cursor: pointer;

.option-card input 
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;

.option-content 
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 2rem;
    background: clrgb(prim, 0.05);
    border: 2px solid clrgb(prim, 0.2);
    border-radius: 15px;
    transition: all 0.3s ease;



.option-content i 
    font-size: 3rem;
    color clr(prim)

.option-card input:checked + .option-content 
    background: clrgb(prim, 0.2);
    border-color clr(prim)
    transform: scale(1.05);
    box-shadow: 0 10px 30px clrgb(prim, 0.3);

+below(768px)
    .calculator-advanced 
        grid-template-columns: 1fr;
    