.advantages-grid 
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;


.advantage-item 
    background: clrgb(blck, 1)
    border: 1px solid clrgb(prim, .2)
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;

.advantage-item p  
    text-align: center


.advantage-item::before 
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, clrgb(prim, .1) 0%, transparent 70%);
    transform: scale(0);
    transition: transform 0.5s ease;


.advantage-item:hover::before 
    transform: scale(1);


.advantage-item:hover 
    transform: translateY(-10px);
    border-color clr(prim)
    box-shadow: 0 20px 40px clrgb(prim, .2)


.advantage-icon 
    font-size: 3rem;
    color clr(prim)
    margin-bottom: 1rem;
    animation: pulse 2s ease-in-out infinite;


@keyframes pulse 
    0%, 100% 
        transform: scale(1); 
    50%  
        transform: scale(1.05); 


@keyframes bounce 
    0%, 20%, 50%, 80%, 100% 
        transform: translateY(0);
    40% 
        transform: translateY(-20px);
    60% 
        transform: translateY(-10px);


.advantage-item h3 
    margin-bottom: 1rem;
    position: relative;
    z-index: 1;


.advantage-item p 
    color clr(second_2);
    position: relative;
    z-index: 1;

+below(t)
    .advantages-grid 
        grid-template-columns: 1fr;
    
+below(sm)
    .advantage-item h3
        margin-bottom: 1em;
        position: relative;
        z-index: 1;
    
    h3
        font-size: 1.5em