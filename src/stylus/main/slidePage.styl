//     border-radius: 10px;

/* Стрелки навигации */
.nav-arrow 
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    // background: rgba(255, 255, 255, 0.9);
    width: 50px;
    height: 50px;
    padding: unset
    color: #333;
    z-index: 10;

.nav-arrow:hover 
    // background: rgba(255, 255, 255, 1);
    transform: translateY(-50%) scale(1.1);
    box-shadow: 0 6px 20px clrgb(blck, 0.3);

.prev-arrow 
    left: 30px;

.next-arrow 
    right: 30px;

/* Индикаторы слайдов */
.slide-indicators 
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;

.indicator 
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: clrgb(blck, 0.3);
    cursor: pointer;
    transition: all 0.3s ease;

.indicator.active 
    background: clr(prim)
    transform: scale(1.2);

.indicator:hover 
    background: rgba(102, 126, 234, 0.7);

/* Средний блок: Навигационная панель */
.navigation-panel 
    // background: rgba(255, 255, 255, 0.95);
    // border-radius: 20px;
    padding: 25px;
    margin-bottom: 30px;
    // box-shadow: 0 20px 40px clrgb(blck, 0.1);
    // backdrop-filter: blur(10px);

.project-buttons 
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
    max-width: 1000px;
    margin: 0 auto;

.project-btn 
    padding: 15px 20px;
    border: none;
    border-radius: 12px;
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: clr(second);
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px clrgb(blck, 0.2);

.project-btn:hover 
    transform: translateY(-2px);
    box-shadow: 0 6px 20px clrgb(blck, 0.3);

.project-btn.active 
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: scale(1.05);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);

/* Нижний блок: Текстовая область */
