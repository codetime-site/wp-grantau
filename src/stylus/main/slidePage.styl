/* Верхний блок: Слайд-шоу */
.slideshow-container 
    position: relative;
    // background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0 20px 40px clrgb(blck, 0.1);
    // border 2px solid clr(prim)
    backdrop-filter: blur(10px);

.slides-wrapper 
    position: relative;
    height: 400px;
    overflow: hidden;
    border-radius: 15px;
    // background: #f8f9fa;

.slide 
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;

.slide.active 
    opacity: 1;

